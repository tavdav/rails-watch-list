<h1>Movie Lists</h1>

<%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %>

<!-- for face detection -->
<%= cl_image_tag("IMAGE_WITH_FACE_ID",
      width: 150, height: 150, crop: :thumb, gravity: :face) %>

<ul>
  <% @lists.each do |list| %>
    <li><%= link_to list.name, list_path(list) %> </li>
  <% end %>
</ul>

<%= link_to 'Create a New List', new_list_path, class: 'btn btn-primary' %>
